<%= form_with model: @user, local: true do |f| %>
  <p>新しいアカウントを作成</p>
  <%= render "shared/error", object: @user %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "新しいアカウントを作成" %>
<% end %>

<p>すでにアカウントをお持ちの方はログイン</p>