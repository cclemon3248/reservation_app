<div class="container form">
  <div class="edit-form">

    <%= form_with model: @user, local: true do |f| %>
      <h2>アカウント編集</h2>
      <%= render "shared/error", object: @user %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "edit-font" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password, "変更後パスワード（変更する場合のみ入力）", class: "edit-font" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認用（変更する場合のみ入力）", class: "edit-font" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :current_password, "現在のパスワード", class: "edit-font" %>
        <%= f.password_field :current_password, placeholder: "現在のパスワードを入力", class: "form-control" %>
      </div>
      <div class="field"><%= f.submit "更新", class: "form-control btn btn-primary" %></div>
      <div class="field"><%= link_to "戻る", user_path(@user.id), class: "form-control text-decoration" %></div>
    <% end %>
  </div>
</div>