<!DOCTYPE html>
<html>
  <head>
    <title>ReservationApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="left-header">
      <%= link_to image_tag("logo.png"), "/" %>
      <%= search_form_for @q, url: search_rooms_path do |f| %>
        <%= f.search_field :address_cont, placeholder: "エリア" %>
        <%= f.search_field :name_or_content_cont, placeholder: "キーワード" %>
        <%= f.submit class: "d-none" %>
      <% end %>
    </div>
    <div class="right-header">
      <% if logged_in? %>
        <div class="right-header-top">
          <div class="image-header" onclick=eventA();>
            <%= image_tag "333.jpg", class: "header-icon" %>
          </div>
          <div class="header-font">水原</div>
        </div>
        <div id="header-nav-menu" class="header-nav-menu-none">
          <ul>
            <li><%= link_to "ルーム登録", new_room_path %></li>
            <li><%= link_to "予約済みルーム一覧", reserves_path %></li>
            <li><%= link_to "登録済みルーム一覧", post_rooms_path %></li>
            <li><%= link_to "設定", user_path(current_user.id) %></li>
            <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
          </ul>
        </div>
      <% else %>
        <%= link_to "ログイン", new_session_path %>
        <%= link_to "登録する", new_user_path %>
      <% end %>

    </div>
    </header>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <% if logged_in? %>
        ログイン中
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
        <%= link_to "ルーム登録", new_room_path %>
        <%= link_to "予約済みルーム一覧", reserves_path %>
        <%= link_to "登録済みルーム一覧", post_rooms_path %>
        <%= link_to "設定", user_path(current_user.id) %>
      <% else %>
        <%= link_to "ログイン", new_session_path %>
        <%= link_to "登録する", new_user_path %>
      <% end %>
    <%= yield %>
    <footer>
      <p>© 2020 POTEPAN.INC.</p>
    </footer>
  </body>
</html>

<script>
  eventA = function() {
    const testa = document.getElementById('header-nav-menu');
    if (testa.classList.contains('header-nav-menu-none')) {
      testa.classList.remove('header-nav-menu-none');
    } else {
      testa.classList.add('header-nav-menu-none');
    }
  }
</script>