<div class="container room-show">
  <div class="row">
    <div class="col-8">

      <%= image_tag @room.image.url, class: "room-show-image" %>

      <div class="room-show-detile">
        <div class="room-show-icon">
          <%= image_tag 'default_icon.jpg', class: "room-icon" %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.content %></p>
    </div>
    
    <div class="col-4">
    <div class="room-show-nav">
      <h5 class="price-icon"><%= @room.price %> / 日</h5>
        <div class="room-show-date-select">
        <%= form_with(scope: :reserve, url: new_reserf_path, method: :get, local: true) do |f| %>
          <div>
            <div><%= f.label :start, "開始日", class: "show-font" %></div>
            <%= f.date_field :start, class: "form-control" %>
          </div>
          <div>
            <div><%= f.label :end, "終了日", class: "show-font" %></div>
            <%= f.date_field :end, class: "form-control" %>
          </div>
          <div>
            <div><%= f.label :people, "人数", class: "show-font" %></div>
            <%= f.number_field :people, class: "form-control" %>
          </div>
          <%= hidden_field_tag :room_id, @room.id %>
        
          <%= f.submit "予約する", class: "form-control btn btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>

  </div>
</div>